---
import PageHeader from "@/components/PageHeader.astro";
import config from "@/config/config.json";
import Base from "@/layouts/Base.astro";
import type { CollectionEntry } from "astro:content";
import { getEntry } from "astro:content";

// OPTION A (astro:assets): uncomment these two lines if your images are in /src/assets or similar
// import ContactImg from "@/assets/images/contact-img.png";
// import Shape2 from "@/assets/images/shape-2.png";

const entry = (await getEntry("contact", "-index")) as CollectionEntry<"contact">;
const { contact_form_action } = config.params;
const contact = entry.data;
const page_data = { ...contact, content: entry.body };
---

<Base
  title={contact.title}
  meta_title={contact.meta_title}
  description={contact.description}
  image={contact.image}
>
  <section class="page-hero pb-6 pt-16">
    <div class="container">
      <PageHeader page_data={page_data} />
    </div>
  </section>

  <section class="section pt-0">
    <div class="container">
      <div class="row">
        <div class="mb-10 text-center md:col-6 md:order-2 md:mb-0 md:pt-9">
          <div class="contact-img relative inline-flex pb-5 pl-5">
            {/*
              IMAGE HANDLING:
              - If your files are in /public/images, use plain <img> (OPTION B).
              - If using astro:assets (OPTION A), use <Image src={ContactImg} ... />.
            */}

            <!-- OPTION B (public/ images): keep this if your files are in /public -->
            <img src="/images/contact-img.png" height="544" width="500" alt="Contact Altiora" />
            <img class="absolute bottom-0 left-0 -z-[1] h-14 w-14" src="/images/shape-2.png" alt="" height="56" width="56" />

            {/*
            // OPTION A (astro:assets): uncomment if you imported ContactImg/Shape2 above
            // <Image src={ContactImg} height={544} width={500} alt="Contact Altiora" />
            // <Image class="absolute bottom-0 left-0 -z-[1] h-14 w-14" src={Shape2} alt="" height={56} width={56} />
            */}
          </div>
        </div>

        <div class="md:col-6 md:order-1">
          <form class="lg:max-w-[484px]" action={contact_form_action} method="POST">
            <!-- Honeypot for spam bots -->
            <input type="text" name="company" tabindex="-1" autocomplete="off" class="hidden" aria-hidden="true" />

            <div class="form-group mb-5">
              <label class="form-label" for="name">Full Name</label>
              <input
                class="form-control"
                type="text"
                id="name"
                name="name"
                placeholder="Your full name"
                autocomplete="name"
                required
              />
            </div>

            <div class="form-group mb-5">
              <label class="form-label" for="email">Email Address</label>
              <input
                class="form-control"
                type="email"
                id="email"
                name="email"
                placeholder="your@email.com"
                autocomplete="email"
                inputmode="email"
                required
              />
            </div>

            <div class="form-group mb-5">
              <label class="form-label" for="reason">Reason/Purpose</label>
              <select name="reason" id="reason" class="form-select" required>
                <option value="">Select reason/purpose</option>
                <option value="issue">Issue Query</option>
                <option value="information">Information Query</option>
                <option value="business">Business Query</option>
              </select>
            </div>

            <div class="form-group mb-5">
              <label class="form-label" for="message">Message</label>
              <textarea
                class="form-control"
                id="message"
                name="message"
                rows="6"
                placeholder="How can we help?"
                required
              ></textarea>
            </div>

            <input class="btn btn-primary block w-full" type="submit" value="Send Message" />
          </form>
        </div>
      </div>
    </div>
  </section>
</Base>
